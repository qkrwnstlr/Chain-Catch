<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/bg_summer_light60"
  tools:context=".MainActivity">

  <!-- title -->
  <ImageView
    android:id="@+id/iv_title"
    android:layout_width="@dimen/activity_main_title_width_300"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_main_title_margin_100"
    android:adjustViewBounds="true"
    android:contentDescription="앱 제목 표시"
    app:layout_constraintBottom_toTopOf="@id/btn_start"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_chainStyle="spread_inside" />


  <!-- start button -->
  <ImageView
    android:id="@+id/btn_start"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/activity_main_button_height_50"
    android:layout_marginBottom="@dimen/activity_main_button_margin_50"
    android:background="@android:color/transparent"
    android:contentDescription="start 버튼 표시"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/iv_title" />

</androidx.constraintlayout.widget.ConstraintLayout>